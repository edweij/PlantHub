<Project Sdk="Microsoft.NET.Sdk.Web">
	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>

		<!-- Single-file publish (RID och self-contained sÃ¤tts via Dockerfile) -->
		<PublishSingleFile>true</PublishSingleFile>
		<IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
		<IncludeStaticWebAssets>true</IncludeStaticWebAssets>
		<EnableCompressionInSingleFile>false</EnableCompressionInSingleFile>

		<!-- Optional but nice in containers -->
		<InvariantGlobalization>true</InvariantGlobalization>
	</PropertyGroup>

	<!-- Ensure wwwroot & friends are always copied into publish output --><!--
	<ItemGroup>
		<Content Include="wwwroot/**" CopyToPublishDirectory="PreserveNewest" />
	</ItemGroup>-->
</Project>